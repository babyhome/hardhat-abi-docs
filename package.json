{
  "name": "hardhat-abi-docs",
  "version": "0.1.0",
  "description": "Hardhat plugin to generate OpenAPI Documentation from ABI",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx hardhat gen-abi-docs --contract Counter",
    "build": "tsc --build .",
    "watch": "tsc --watch",
    "clean": "rm -rf dist docs",
    "prepare": "npm run build",
    "example:compile": "npx hardhat compile",
    "example:docs": "npx hardhat gen-abi-docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/babyhome/hardhat-abi-docs.git"
  },
